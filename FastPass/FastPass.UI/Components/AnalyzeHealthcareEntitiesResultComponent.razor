<h3>AnalyzeHealthcareEntitiesResultComponent</h3>

<div class="row">        
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Text</th>
                <th>Category</th>
                <th>Confidence</th>
                <th>Offset</th>
                <th>Normalized</th>
            </tr>
        </thead>
        <tbody>
            @if (Entities is not null)
            {
                @foreach (var r in Entities.OrderBy(e => e.Category))
                {
                    <tr>
                        <td>@r.Text</td>
                        <td>@r.Category</td>
                        <td>@r.ConfidenceScore</td>
                        <td>@r.Offset</td>
                        <td>@r.NormalizedText</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public IList<Entity> Entities { get; set; } = default!;
}
